.thread-item{ng_controller: "OutcomeCreatedItemController"}
  .thread-item__header.media
    .media-left
      %user_avatar{user: "event.actor()", size: "small"}
    .media-body
      %h3.thread-item__title{id: "event-{{event.id}}"}
        %span{translate: "poll_thread_item.outcome_created", translate-values: "{author: event.actor().name}"}>
      %p {{ outcome.statement }}
      %timeago.timeago--inline{timestamp: "event.createdAt"}
