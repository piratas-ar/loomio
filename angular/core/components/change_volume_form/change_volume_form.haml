%md-dialog.change-volume-form
  %form{ng-submit: "submit()"}
    .lmo-disabled-form{ng-show: "isDisabled"}
    %md-toolbar
      .md-toolbar-tools.lmo-flex__space-between
        %h1.lmo-h1.change-volume-form__title{translate: "{{translateKey()}}.title", translate-value-title: "{{model.title || model.groupName()}}"}
        %material_modal_header_cancel_button
    .md-dialog-content
      %p
        %ul.change-volume-form__list.md-body-1
          %li.change-volume-form__option{ng-repeat: "level in volumeLevels"}
            %input.change-volume-form__input{id: "volume-{{level}}", type: "radio", ng-model: "buh.volume", name: "volume", value: "{{level}}"}
            %label.change-volume-form__label{for: "volume-{{level}}"}
              %strong{translate: "change_volume_form.{{level}}_label"}
              %p.change-volume-form__description{translate: "{{translateKey()}}.{{level}}_description"}
        %input.change-volume-form__apply-to-all#apply-to-all{type: "checkbox", ng-model: "applyToAll"}
        %label.change-volume-form__apply-to-all-label.md-body-1{for: "apply-to-all", translate: "{{translateKey()}}.apply_to_all"}
      .lmo-md-actions
        %md-button.change-volume-form__cancel{type: "button", translate: "common.action.cancel", ng-click: "$close()"}
        %md-button.md-raised.md-primary.change-volume-form__submit{type: "submit", ng-disabled: "isDisabled", translate: "common.action.update"}
