- if @info.recipient_stance
  %h3= t(:"poll_mailer.common.your_response")
  = render 'poll_mailer/common/your_response'
- else
  %h3= t(:"poll_mailer.common.please_respond")
  %table
    - @info.poll.poll_options.each do |option|
      %tr
        %td= render 'poll_mailer/common/chip', color: option.color
        %td= link_to @info.display_name_for(option), poll_url(@info.poll, poll_option_id: option.id)
